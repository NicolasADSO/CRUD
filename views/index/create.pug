extends /layout/layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card.shadow-lg.rounded-4
          .card-header.bg-primary.text-white.text-center.py-3.rounded-top
            h3.mb-0 Crea un nuevo producto
          include ../partials/alerts
          .card-body.px-4.py-4
            form(action="/crear", method="POST")
              .mb-3
                label(for="nombre").form-label Nombre 
                input(type="text", name="nombre", id="nombre", class="form-control form-control-lg", placeholder="Ingrese el nombre del producto")
              .mb-3
                label(for="descripcion").form-label Descripción
                input(type="text", id="descripcion", name="descripcion", class="form-control form-control-lg", placeholder="Ingrese una descripción")
              .mb-3
                label(for="precio").form-label Precio
                input(type="text", id="precio", name="precio", class="form-control form-control-lg", placeholder="Ingrese el precio")
              .mb-3
                label(for="imagen").form-label Imagen 
                input(type="text", name="imagen", id="imagen", class="form-control form-control-lg", placeholder="URL de la imagen")
              .d-grid.mt-4
                button(type="submit").btn.btn-lg.btn-primary.fw-bold Crear
